  "compliance_rules": [
    {
      "rule_id": "EPA_001",
      "framework": "EPA",
      "rule_name": "Annual GHG Reporting Threshold",
      "rule_description": "Organizations with annual GHG emissions ≥25,000 tons CO2e must report to EPA",
      "conditions": {
        "total_emissions_tons_co2e": {"gte": 25000}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["total_emissions_tons_co2e", "reporting_year", "facility_id"],
      "validation_rules": ["emission_calculation_verification", "third_party_verification"],
      "threshold_values": {"emission_threshold": 25000}
    },
    {
      "rule_id": "EPA_002", 
      "framework": "EPA",
      "rule_name": "Emission Factor Source Verification",
      "rule_description": "All emission factors must be from approved sources with proper documentation",
      "conditions": {
        "emission_factors": {"source_verified": true}
      },
      "severity": "medium",
      "auto_apply": true,
      "required_fields": ["emission_factor_source", "verification_documentation"],
      "validation_rules": ["source_verification", "documentation_completeness"]
    },
    {
      "rule_id": "EU_ETS_001",
      "framework": "EU_ETS", 
      "rule_name": "Installation Monitoring Plan",
      "rule_description": "All installations must have approved monitoring plans",
      "conditions": {
        "installation_type": {"in": ["combustion", "refinery", "cement", "steel", "aluminum"]}
      },
      "severity": "critical",
      "auto_apply": true,
      "required_fields": ["monitoring_plan_id", "plan_approval_date", "verification_body"],
      "validation_rules": ["plan_approval_verification", "annual_review"]
    },
    {
      "rule_id": "TCFD_001",
      "framework": "TCFD",
      "rule_name": "Governance Disclosure",
      "rule_description": "Organizations must disclose climate governance structure and processes",
      "conditions": {
        "organization_type": {"in": ["public_company", "financial_institution", "large_corporation"]}
      },
      "severity": "medium",
      "auto_apply": false,
      "required_fields": ["board_oversight", "management_responsibility", "climate_committee"],
      "validation_rules": ["governance_structure_verification"]
    },
    {
      "rule_id": "SEC_001",
      "framework": "SEC",
      "rule_name": "Climate Risk Disclosure",
      "rule_description": "Public companies must disclose material climate-related risks",
      "conditions": {
        "company_type": "public_company",
        "material_risk_threshold": {"gte": 0.05}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["climate_risk_assessment", "material_impact_analysis", "governance_structure"],
      "validation_rules": ["materiality_assessment", "risk_quantification"]
    },
    {
      "rule_id": "CARB_001",
      "framework": "CARB",
      "rule_name": "California GHG Reporting",
      "rule_description": "California facilities with ≥10,000 tons CO2e must report to CARB",
      "conditions": {
        "location": "California",
        "total_emissions_tons_co2e": {"gte": 10000}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["facility_id", "emission_data", "verification_report"],
      "validation_rules": ["third_party_verification", "emission_calculation_verification"]
    },
    {
      "rule_id": "ISO_14001_001",
      "framework": "ISO_14001",
      "rule_name": "Environmental Policy",
      "rule_description": "Organizations must establish and maintain environmental policy",
      "conditions": {
        "certification_status": "certified"
      },
      "severity": "medium",
      "auto_apply": false,
      "required_fields": ["environmental_policy", "policy_approval", "policy_communication"],
      "validation_rules": ["policy_completeness", "stakeholder_communication"]
    },
    {
      "rule_id": "GHG_Protocol_001",
      "framework": "GHG_Protocol",
      "rule_name": "Scope 1 Emissions Calculation",
      "rule_description": "Organizations must calculate and report Scope 1 emissions",
      "conditions": {
        "reporting_standard": "GHG_Protocol"
      },
      "severity": "medium",
      "auto_apply": false,
      "required_fields": ["scope_1_emissions", "emission_sources", "calculation_methodology"],
      "validation_rules": ["emission_calculation_verification", "methodology_documentation"]
    },
    {
      "rule_id": "CDP_001",
      "framework": "CDP",
      "rule_name": "Climate Change Disclosure",
      "rule_description": "Organizations must complete annual CDP climate change questionnaire",
      "conditions": {
        "cdp_participation": true
      },
      "severity": "medium",
      "auto_apply": false,
      "required_fields": ["cdp_response", "emission_data", "targets_goals"],
      "validation_rules": ["response_completeness", "data_verification"]
    },
    {
      "rule_id": "SBTi_001",
      "framework": "SBTi",
      "rule_name": "Science-Based Target Setting",
      "rule_description": "Organizations must set science-based emission reduction targets",
      "conditions": {
        "sbti_commitment": true
      },
      "severity": "medium",
      "auto_apply": false,
      "required_fields": ["target_setting", "target_validation", "progress_tracking"],
      "validation_rules": ["target_methodology", "validation_approval"]
    },
    {
      "rule_id": "GENERAL_001",
      "framework": "GENERAL",
      "rule_name": "Data Quality Minimum Standards",
      "rule_description": "All emission data must meet minimum quality standards with uncertainty ≤20%",
      "conditions": {
        "data_quality_score": {"lt": 80}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["data_quality_score", "uncertainty_percentage", "methodology"],
      "validation_rules": ["uncertainty_quantification", "methodology_verification"],
      "threshold_values": {"max_uncertainty": 20, "min_quality_score": 80}
    },
    {
      "rule_id": "GENERAL_002",
      "framework": "GENERAL",
      "rule_name": "Emission Factor Source Documentation",
      "rule_description": "All emission factors must be from recognized sources (EPA, IPCC, DEFRA, etc.)",
      "conditions": {
        "emission_factor_source": {"not_in": ["EPA", "IPCC", "DEFRA", "EIA", "IEA", "Verified"]}
      },
      "severity": "medium",
      "auto_apply": true,
      "required_fields": ["emission_factor_source", "source_documentation", "factor_version"],
      "validation_rules": ["source_verification", "documentation_completeness"]
    },
    {
      "rule_id": "GENERAL_003",
      "framework": "GENERAL",
      "rule_name": "Activity Data Completeness",
      "rule_description": "Activity data must be complete for all emission sources with >1% of total emissions",
      "conditions": {
        "activity_data_completeness": {"lt": 95}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["activity_amount", "activity_unit", "measurement_method"],
      "validation_rules": ["completeness_verification", "measurement_accuracy"],
      "threshold_values": {"min_completeness": 95}
    },
    {
      "rule_id": "GENERAL_004",
      "framework": "GENERAL",
      "rule_name": "Scope 1 Direct Emissions Tracking",
      "rule_description": "All Scope 1 emissions must be tracked with fuel consumption data",
      "conditions": {
        "scope_1_emissions": {"gt": 0},
        "fuel_consumption_data": {"exists": false}
      },
      "severity": "critical",
      "auto_apply": true,
      "required_fields": ["fuel_type", "fuel_consumption", "emission_factor", "combustion_efficiency"],
      "validation_rules": ["fuel_data_verification", "emission_calculation_verification"]
    },
    {
      "rule_id": "GENERAL_005",
      "framework": "GENERAL",
      "rule_name": "Scope 2 Electricity Emissions",
      "rule_description": "Scope 2 emissions must use location-based and market-based factors",
      "conditions": {
        "scope_2_emissions": {"gt": 0},
        "electricity_emission_factors": {"count": {"lt": 2}}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["location_based_factor", "market_based_factor", "electricity_consumption"],
      "validation_rules": ["factor_verification", "consumption_verification"]
    },
    {
      "rule_id": "GENERAL_006",
      "framework": "GENERAL",
      "rule_name": "Scope 3 Supply Chain Emissions",
      "rule_description": "Scope 3 emissions must be calculated for material categories (>5% of total)",
      "conditions": {
        "scope_3_emissions": {"gt": 0},
        "scope_3_categories_covered": {"lt": 8}
      },
      "severity": "medium",
      "auto_apply": true,
      "required_fields": ["scope_3_categories", "supplier_data", "calculation_methodology"],
      "validation_rules": ["category_completeness", "supplier_data_verification"],
      "threshold_values": {"min_categories": 8, "materiality_threshold": 5}
    },
    {
      "rule_id": "GENERAL_007",
      "framework": "GENERAL",
      "rule_name": "Third-Party Verification Requirement",
      "rule_description": "Emission data must be verified by accredited third party for reports >10,000 tCO2e",
      "conditions": {
        "total_emissions_tons_co2e": {"gte": 10000},
        "third_party_verification": {"exists": false}
      },
      "severity": "critical",
      "auto_apply": true,
      "required_fields": ["verification_body", "verification_report", "verification_date"],
      "validation_rules": ["verifier_accreditation", "verification_completeness"],
      "threshold_values": {"verification_threshold": 10000}
    },
    {
      "rule_id": "GENERAL_008",
      "framework": "GENERAL",
      "rule_name": "Record Retention and Audit Trail",
      "rule_description": "All emission data must be retained for minimum 7 years with complete audit trail",
      "conditions": {
        "record_retention_years": {"lt": 7},
        "audit_trail_completeness": {"lt": 100}
      },
      "severity": "high",
      "auto_apply": true,
      "required_fields": ["data_source", "calculation_steps", "approval_chain", "modification_history"],
      "validation_rules": ["retention_verification", "audit_trail_completeness"],
      "threshold_values": {"min_retention_years": 7, "min_audit_trail": 100}
    },
    {
      "rule_id": "GENERAL_009",
