modules = ["python-3.11"]
[agent]
integrations = ["flask_supabase:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Carbon DNA Ledger"

[[workflows.workflow]]
name = "Carbon DNA Ledger"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install fastapi uvicorn sqlalchemy psycopg2-binary pydantic pdfplumber python-multipart pandas plotly requests && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 & sleep 3 && streamlit run ui/app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 39377
externalPort = 3000
